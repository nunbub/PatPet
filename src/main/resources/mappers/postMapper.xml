<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.patpet.post.dao.PostDAO">

	<insert id="insertPost" parameterType="map">
		INSERT INTO
			`post`
		(
			`userId`
			, `title`
			, `name`
			, `category`
			, `state`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{title}
			, #{name}
			, #{category}
			, #{state}
			, #{content}
			, #{imagePath}
			, now()
			, now()
		)
	
	</insert>
	
	<select id="selectPostList" resultType="com.patpet.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `imagePath`
			, `title`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE	
			`category` = #{category}	
		ORDER BY `id` DESC;		
	
	</select>
	
	<select id="selectPost" parameterType="int" resultType="com.patpet.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `title`
			, `name`
			, `category`
			, `state`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{id}		
	</select>
	
	<update id="updatePost" parameterType="map">
		UPDATE
			`post`
		SET
			`title` = #{title}
			, `name` = #{name}
			, `category` = #{category}
			, `state` = #{state}
			, `content` = #{content}	
			, `imagePath` = #{imagePath}
			, `updatedAt` = now()
		WHERE
			`id` = #{postId}	
	</update>
	
	<delete id="deletePost" parameterType="int">
		DELETE FROM
			`post`
		WHERE
			`id` = #{postId}	
	</delete>


</mapper>  