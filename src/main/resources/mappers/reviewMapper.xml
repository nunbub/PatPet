<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.patpet.review.dao.ReviewDAO">

	<insert id="insertReview" parameterType="map">
		INSERT INTO
			`review`
		(
			`userId`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)	
		VALUES
		(
			#{userId}
			, #{title}
			, #{content}
			, #{imagePath}
			, now()
			, now()
		)
	</insert>
	
	<select id="selectReviewList" resultType="com.patpet.review.model.Review">
		SELECT
			`id`
			, `userId`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`review`
		ORDER BY `id` DESC;		
	</select>
	
	<select id="selectMainPage" resultType="com.patpet.review.model.Review">
		SELECT
			`id`
			, `userId`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`review`
		ORDER BY `id` DESC
		LIMIT 1;	
	</select>
	
	<select id="selectReview" parameterType="int" resultType="com.patpet.review.model.Review">
		SELECT
			`id`
			, `userId`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`review`
		WHERE
			`id` = #{id}	
	</select>
	
	<update id="updateReview" parameterType="map">
		UPDATE
			`review`
		SET
			`title` = #{title}	
			, `content` = #{content}
			, `imagePath` = #{imagePath}
			, `updatedAt` = now()
		WHERE
			`id` = #{postId}	
	</update>

</mapper>  